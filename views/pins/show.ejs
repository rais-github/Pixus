<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-8 details-box">
      <div class="row">
        <div class="col-6">
          <img src="<%= pin.image.url %>" class="img-fluid show-img" alt="Listing" />
        </div>
        <div class="col-6">
          <h3 class="text-center">Listing Details:</h3>
          <div class="card listing-card">
            <div class="card-body detail">
              <ul>
                <li><b><%= pin.title %></b></li>
                <li><%= pin.description %></li>
                <li><a href="<%= pin.link %>"><%= pin.link %></a></li>
                <li><%= pin.board %></li>
                <li><%= pin.taggedTopics %></li>
              </ul>
              <!-- Comment Input Field with Rating Slider -->
              <form action="/pins/<%= pin._id %>/comments" method="post" novalidate class="needs-validation mt-3">
                <div class="mb-3">
                  <label for="newComment" class="form-label">Add a Comment:</label>
                  <textarea class="form-control" name="comment[message]" id="newComment" cols="30" rows="3" required></textarea>
                  <div class="invalid-feedback">Enter your comment</div>
                </div>
                <div class="mb-3">
                  <label for="rating" class="form-label">Rating</label>
                  <input type="range" min="1" max="5" id="rating" name="comment[rating]" />
                </div>
                <button type="submit" class="btn btn-outline-dark mt-2">Post Comment</button>
              </form>
            </div>
          </div>
          <div class="mt-3 text-center">
            <a href="/pins/<%= pin._id %>/edit">Edit</a>
            <form method="POST" action="/pins/<%= pin._id %>?_method=DELETE">
              <button>Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4" >
      <div class="comments-container" style="max-height: 300px; overflow-y: auto;">
        <h3>All Comments</h3>
        <div class="col">
          <% for (const comment of pin.comments) { %>
            <div class="card mb-3">
              <div class="card-body">
                <p class="card-text"><%= comment.message %></p>
                <p class="card-text">Rated: <%= comment.rating %></p>
              </div>
              <form action="/pins/<%= pin._id %>/comments/<%= comment._id %>?_method=DELETE" method="post">
                <button class="btn btn-outline-danger" type="submit">Del</button>
              </form>        
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
</html>
