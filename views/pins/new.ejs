<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pixus</title>
  </head>
  <body>
    <h3>Create Pin</h3>
    <form action="/pins" method="POST">
      <label for="title">Title</label>
      <input
        type="text"
        name="pins[title]"
        placeholder="Add a title"
        required
      /><br />
      <label for="description">Description</label>
      <textarea
        required
        name="pins[description]"
        placeholder="Add a detailed description"
        cols="30"
        rows="10"
      ></textarea
      ><br />
      <label for="image">Image</label>
      <input type="text" name="pins[image]" placeholder="Image URL" /><br />
      <label for="link">Link</label>
      <input type="text" name="pins[link]" placeholder="Add a link" /><br />
      <label for="board">Board</label>
      <input
        type="text"
        required
        name="pins[board]"
        placeholder="Add board"
      /><br />
      <label for="taggedTopics">taggedTopics</label>
      <input
        type="text"
        required
        name="pins[taggedTopics]"
        placeholder="Add related topics"
      /><br />

      <button>Publish</button>
    </form>
  </body>
</html>
